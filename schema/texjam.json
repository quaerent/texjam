{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/quaerent/texjam/raw/refs/tags/v0.5.5/schema/texjam.json",
  "title": "TeXJam Configuration Schema",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the template.",
      "type": "string"
    },
    "authors": {
      "description": "List of authors for the template.",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "description": {
      "description": "A brief description of the template.",
      "type": "string"
    },
    "source_dir": {
      "description": "The source directory for the template files.",
      "type": "string",
      "default": "src"
    },
    "plugin_dir": {
      "description": "The directory for template plugins.",
      "type": "string",
      "default": "plugins"
    },
    "jinja": {
      "description": "Jinja2 environment configuration.",
      "type": "object",
      "properties": {
        "block_start_string": {
          "description": "The string marking the beginning of a block.",
          "type": "string",
          "default": "((*"
        },
        "block_end_string": {
          "description": "The string marking the end of a block.",
          "type": "string",
          "default": "*))"
        },
        "variable_start_string": {
          "description": "The string marking the beginning of a print statement.",
          "type": "string",
          "default": "((("
        },
        "variable_end_string": {
          "description": "The string marking the end of a print statement.",
          "type": "string",
          "default": ")))"
        },
        "comment_start_string": {
          "description": "The string marking the beginning of a comment.",
          "type": "string",
          "default": "((="
        },
        "comment_end_string": {
          "description": "The string marking the end of a comment.",
          "type": "string",
          "default": "=))"
        },
        "line_statement_prefix": {
          "description": "The prefix for line based statements.",
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "line_comment_prefix": {
          "description": "The prefix for line based comments.",
          "type": [
            "string",
            "null"
          ],
          "default": null
        },
        "trim_blocks": {
          "description": "Whether the first newline after a block is removed.",
          "type": "boolean",
          "default": true
        },
        "lstrip_blocks": {
          "description": "Whether leading spaces and tabs are stripped from the start of a line to a block.",
          "type": "boolean",
          "default": true
        },
        "newline_sequence": {
          "description": "The sequence that starts a newline.",
          "type": "string",
          "default": "\n"
        },
        "keep_trailing_newline": {
          "description": "Whether to preserve the trailing newline when rendering templates.",
          "type": "boolean",
          "default": true
        },
        "autoescape": {
          "description": "Whether the XML/HTML autoescaping feature is enabled by default.",
          "type": "boolean",
          "default": false
        }
      }
    },
    "meta": {
      "type": "object",
      "description": "Metadata fields for user prompts.",
      "additionalProperties": {
        "anyOf": [
          {
            "type": [
              "string",
              "number",
              "boolean",
              "null"
            ]
          },
          {
            "type": "array",
            "items": {
              "type": "string"
            },
            "minItems": 1
          },
          {
            "type": "object",
            "properties": {
              "prompt": {
                "$ref": "#/$defs/prompt"
              },
              "required": {
                "$ref": "#/$defs/required"
              },
              "type": {
                "type": "string",
                "enum": [
                  "str"
                ],
                "description": "Type of the metadata field."
              },
              "default": {
                "type": "string",
                "default": "",
                "description": "Default value for the metadata field."
              },
              "min_length": {
                "type": "integer",
                "minimum": 0,
                "description": "Minimum length for the string."
              },
              "max_length": {
                "type": "integer",
                "minimum": 0,
                "description": "Maximum length for the string."
              }
            },
            "required": [
              "type"
            ]
          },
          {
            "type": "object",
            "properties": {
              "prompt": {
                "$ref": "#/$defs/prompt"
              },
              "required": {
                "$ref": "#/$defs/required"
              },
              "type": {
                "type": "string",
                "enum": [
                  "number"
                ],
                "description": "Type of the metadata field."
              },
              "default": {
                "type": [
                  "number",
                  "null"
                ],
                "default": null,
                "description": "Default value for the metadata field."
              },
              "is_integer": {
                "type": "boolean",
                "description": "Whether the number should be an integer."
              },
              "min_value": {
                "type": "number",
                "description": "Minimum value for the number."
              },
              "max_value": {
                "type": "number",
                "description": "Maximum value for the number."
              }
            },
            "required": [
              "type"
            ]
          },
          {
            "type": "object",
            "properties": {
              "prompt": {
                "$ref": "#/$defs/prompt"
              },
              "required": {
                "$ref": "#/$defs/required"
              },
              "type": {
                "type": "string",
                "enum": [
                  "bool"
                ],
                "description": "Type of the metadata field."
              },
              "default": {
                "type": "boolean",
                "default": false,
                "description": "Default value for the metadata field."
              }
            },
            "required": [
              "type"
            ]
          },
          {
            "type": "object",
            "properties": {
              "prompt": {
                "$ref": "#/$defs/prompt"
              },
              "required": {
                "$ref": "#/$defs/required"
              },
              "type": {
                "type": "string",
                "enum": [
                  "path"
                ],
                "description": "Type of the metadata field."
              },
              "default": {
                "type": [
                  "string",
                  "null"
                ],
                "default": null,
                "description": "Default value for the metadata field."
              },
              "exists": {
                "type": "boolean",
                "default": false,
                "description": "Whether the path must exist."
              },
              "is_dir": {
                "type": "boolean",
                "default": false,
                "description": "Whether the path must be a directory."
              },
              "is_file": {
                "type": "boolean",
                "default": false,
                "description": "Whether the path must be a file."
              }
            },
            "required": [
              "type"
            ]
          },
          {
            "type": "object",
            "properties": {
              "prompt": {
                "$ref": "#/$defs/prompt"
              },
              "required": {
                "$ref": "#/$defs/required"
              },
              "type": {
                "type": "string",
                "enum": [
                  "choice"
                ],
                "description": "Type of the metadata field."
              },
              "default": {
                "type": [
                  "string",
                  "null"
                ],
                "default": null,
                "description": "Default value for the metadata field."
              },
              "choices": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              }
            },
            "required": [
              "type",
              "choices"
            ]
          },
          {
            "type": "object",
            "properties": {
              "prompt": {
                "$ref": "#/$defs/prompt"
              },
              "required": {
                "$ref": "#/$defs/required"
              },
              "type": {
                "type": "string",
                "enum": [
                  "select"
                ],
                "description": "Type of the metadata field."
              },
              "items": {
                "type": "array",
                "items": {
                  "anyOf": [
                    {
                      "type": "string"
                    },
                    {
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string",
                          "description": "The title of the selectable item."
                        },
                        "value": {
                          "type": [
                            "string",
                            "null"
                          ],
                          "default": null,
                          "description": "The value associated with the selectable item."
                        },
                        "default": {
                          "type": "boolean",
                          "default": false,
                          "description": "Whether this item is selected by default."
                        }
                      },
                      "minItems": 1,
                      "required": [
                        "title"
                      ]
                    }
                  ]
                }
              }
            },
            "required": [
              "type",
              "items"
            ]
          }
        ]
      }
    }
  },
  "required": [
    "name",
    "meta"
  ],
  "$defs": {
    "prompt": {
      "type": "string",
      "description": "The prompt message to display to the user."
    },
    "required": {
      "type": "boolean",
      "description": "Whether this field is required.",
      "default": false
    }
  }
}